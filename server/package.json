{
  "name": "server",
  "description": "Simple server app for the auction",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "Maurus Spieler",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
    "start": "yarn run dev",
    "build": "yarn run clean && yarn run transpile",
    "transpile": "babel ./src/* --out-dir dist",
    "clean": "rimraf dist-server"
  },
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ethers": "^5.5.4",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "ts-node-dev": "^1.1.8",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  },
  "nodemonConfig": {
    "exec": "yarn run dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
